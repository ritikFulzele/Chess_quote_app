<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE020202"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/kasporov" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garry Kasparov (RUS)"
            android:textSize="28sp"
            android:padding="4dp"
            android:textColor="#0B0B0B"
            android:background="@drawable/textview_bg"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/halant_bold"
            android:text="Truth Quote"
            android:textColor="@color/green"
            android:gravity="center"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tvquote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quote"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Next Quote"
            android:textColor="#000000"
            android:background="#4DAA2E"
            android:padding="4dp"
            android:fontFamily="@font/halant_bold"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Previous Quote"
            android:textColor="#000000"
            android:background="#4DAA2E"
            android:padding="4dp"
            android:fontFamily="@font/halant_bold"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shareBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Share"
            android:textColor="#000000"
            android:background="#51AC33"
            android:padding="4dp"
            android:fontFamily="@font/halant_bold"
            />


    </LinearLayout>
</LinearLayout>